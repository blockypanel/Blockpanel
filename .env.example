# Database Configuration
USE_POSTGRES=true
DATABASE_URL=postgresql://postgres:postgres123@db:5432/minecraft_controller
# For SQLite instead: DATABASE_URL=sqlite:///./minecraft_controller.db

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
SERVERS_CONTAINER_ROOT=/data/servers
SERVERS_VOLUME_NAME=minecraft-controller_mc_servers_data

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Error Fixer Configuration
AI_AUTO_STARTUP=true
AI_MONITOR_INTERVAL=30

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production

# PostgreSQL Database Settings (when USE_POSTGRES=true)
POSTGRES_DB=minecraft_controller
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional: External Services
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_FROM=admin@yourserver.com
# EMAIL_PASSWORD=your-app-password
